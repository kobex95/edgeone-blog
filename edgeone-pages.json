{
  "name": "mu-blog",
  "framework": "vite",
  "functions": {
    "directory": "edge-functions"
  },
  "build": {
    "command": "npm run build",
    "publish": "dist/client"
  },
  "routes": [
    {
      "pattern": "/api/*",
      "function": "api-handler"
    },
    {
      "pattern": "/admin*",
      "function": "admin-handler"
    },
    {
      "pattern": "/*",
      "serve": "dist/client"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html",
      "statusCode": 200
    },
    {
      "source": "/articles",
      "destination": "/index.html",
      "statusCode": 200
    },
    {
      "source": "/article/*",
      "destination": "/index.html",
      "statusCode": 200
    },
    {
      "source": "/admin",
      "destination": "/index.html",
      "statusCode": 200
    },
    {
      "source": "/login",
      "destination": "/index.html",
      "statusCode": 200
    }
  ]
}