{
  "version": 1,
  "functions": {
    "directory": "edge-functions"
  },
  "build": {
    "command": "npm run build",
    "publish": "dist/client"
  },
  "routes": [
    {
      "pattern": "/test",
      "function": "test-function"
    },
    {
      "pattern": "/api/*",
      "function": "api-handler"
    },
    {
      "pattern": "/admin/*",
      "function": "admin-handler"
    },
    {
      "pattern": "/function-verification.html",
      "serve": "public/function-verification.html"
    },
    {
      "pattern": "/*",
      "serve": "dist/client"
    }
  ]
}